{
  "name": "dnd-ai-game",
  "version": "1.0.0",
  "description": "AI-led D&D game with cross-platform support",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=packages/backend",
    "build:all": "npm run build --workspaces",
    "start": "run-s build start:backend",
    "start:backend": "npm start --workspace=packages/backend",
    "dev": "concurrently \"npm run dev --workspace=packages/backend\" \"npm run dev --workspace=packages/desktop\"",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:desktop": "npm run dev --workspace=packages/desktop",
    "dev:mobile": "npm run dev --workspace=packages/mobile",
    "install:all": "npm install",
    "clean": "npm run clean --workspaces",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
